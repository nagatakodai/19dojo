<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTw"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/twitter_key"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"
            app:srcCompat="@drawable/twitter_icon" />

        <ImageView
            android:id="@+id/imageViewGh"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/github_key"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/github_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/github"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>